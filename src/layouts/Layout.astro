---
import { ViewTransitions } from 'astro:transitions';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Life of Aviation by Abel - Student Portal" />
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no, user-scalable=no, viewport-fit=cover" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<!-- This script is essential for all Telegram Mini Apps -->
		<script src="https://telegram.org/js/telegram-web-app.js"></script>
		<ViewTransitions />
	</head>
	<body class="bg-tg-bg text-tg-text antialiased font-sans">
		<div id="app-container" class="min-h-screen w-full max-w-lg mx-auto p-4">
			<slot />
		</div>
		<script>
			// Initialize Telegram Web App
			document.addEventListener('DOMContentLoaded', () => {
				if (window.Telegram && window.Telegram.WebApp) {
					const tg = window.Telegram.WebApp;
					tg.ready();
					tg.expand();
          tg.setHeaderColor('secondary_bg_color');

					const applyTheme = (colorScheme) => {
						document.documentElement.classList.toggle('dark', colorScheme === 'dark');
					}

					applyTheme(tg.colorScheme);
					tg.onEvent('themeChanged', () => applyTheme(tg.colorScheme));
				} else {
					console.warn("Telegram WebApp script not loaded. Running in browser mode.");
					// Optional: set a default theme if not in Telegram
					document.documentElement.classList.add('dark');
				}
			});
		</script>
	</body>
</html>